<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bancodetiempo">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BancodeTiempo">
        <activity
            android:name=".ui.PaginaFavoritos"
            android:exported="true" />

        <activity
            android:name=".MapsActivity"
            android:exported="true"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".PaginaInicio"
            android:exported="true" />
        <activity
            android:name=".PaginaVerificacion"
            android:exported="true" />
        <activity android:name=".PaginaPrincipal" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ajustes"
            android:exported="true" />
        <activity
            android:name=".FiltroOfertas"
            android:exported="true" />
        <activity
            android:name=".DocumentosUsuario"
            android:exported="true" />

        <activity
            android:name=".DatosUsuario"
            android:exported="true" />
        <activity
            android:name=".PerfilUsuario"
            android:exported="true" />
        <activity
            android:name=".Login"
            android:exported="true"/>
        <activity
            android:name=".listadoOfertas"
            android:exported="true" />
        <activity
            android:name=".PaginaNavegacion"
            android:exported="true" />

        <activity
            android:name=".NuevaOferta"
            android:parentActivityName=".MenuTemporal"
            android:exported="true">
        </activity>
    </application>

</manifest>