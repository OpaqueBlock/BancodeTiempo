<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="goUserData"
    tools:context=".PerfilUsuario">

    <ImageView
        android:id="@+id/imagenUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:text="@string/nombreUsuario"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/boton_datos_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenUsuario" />

    <Button
        android:id="@+id/boton_datos_usuario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#272323"
        android:onClick="goUserData"
        android:text="@string/datosUsuario"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:iconTint="#221E1E"
        app:layout_constraintBottom_toTopOf="@+id/boton_documentos_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/boton_documentos_usuario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="269dp"
        android:backgroundTint="#272323"
        android:onClick="goUserDoc"
        android:text="@string/documentosUsuario"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:iconTint="#221E1E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_datos_usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>